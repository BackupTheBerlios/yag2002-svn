  </Entity>


  <!-- attention: define first the player then its components such as animation, physics, etc. -->
 
  <Entity Type="Player" InstanceName="player">

      <Parameter Name="name"            		Type="String"    Value="boto" />
      <Parameter Name="physicsentity"   		Type="String"    Value="playerphysics01" />
