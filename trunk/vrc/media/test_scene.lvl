      <Parameter Name="rotation"        		Type="Float"     Value="0" />	
      <Parameter Name="cameraPosOffsetIso"      Type="Vector3"   Value="0 -20 5" />	
      <Parameter Name="cameraRotOffsetIso"      Type="Vector3"   Value="0 -5  0" />	
      <Parameter Name="cameraPosOffsetEgo"      Type="Vector3"   Value="0 0   2" />	
      <Parameter Name="cameraRotOffsetEgo"      Type="Vector3"   Value="0 -2  0" />	

  </Entity>

  <Entity Type="PlayerAnimation" InstanceName="playeranimation01">

      <Parameter Name="animconfig"	    Type="String"  Value="player/banana/banana.cfg" />
      <Parameter Name="position"        Type="Vector3" Value="0 0 -2" />	
      <Parameter Name="rotation"        Type="Vector3" Value="0 0 0" />	
