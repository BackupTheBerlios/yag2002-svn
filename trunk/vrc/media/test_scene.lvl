      <Parameter Name="position"             Type="Vector3"  Value="-522.5 10.6 150.53" />
      <Parameter Name="radius"               Type="Float"    Value="1500" />
      <Parameter Name="meshFile"             Type="String"   Value="light_yellow.osg" />
      <Parameter Name="ambientColor"         Type="Vector3"  Value="0.1 0.1 0.1" />
